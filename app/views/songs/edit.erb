<form action="/songs/<%=@song.slug%>" method="post">

  <input type="hidden" name="_method" value="patch">
  <label>Edit Artist Name: </label>
  <input type="text" name="Artist Name" value=" <%= @artist.name %> ">
  <label>Edit Song Name: </label>
  <input type="text" name="song_name" value=" <%= @song.name %> ">

  <% Genre.all.each do |x| %>

  <input type="checkbox" name="genres[]" id="<%= x.id%>" value="<%=x.id%>" <%='checked' if @song.genres.include?(x) %>><%=x.name%></input>

  <% end %>

  <input type="submit" value="Save">


</form>
